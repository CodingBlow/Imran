import React from 'react';
import { useNavigate } from 'react-router-dom';

const RentServicesHomepage = () => {
  // Initialize the navigation hook from React Router
  const navigate = useNavigate();

  // Function to handle navigation to the Summer Rentals page
  const handleSummerClick = () => {
    navigate('/summer-rentals');
  };

  // Function to handle navigation to the Winter Rentals page
  const handleWinterClick = () => {
    navigate('/winter-rentals');
  };

  return (
    <div className="flex flex-col items-center justify-center min-h-screen bg-gray-100">
      <h1 className="text-4xl font-extrabold mb-10 text-gray-800">
        Rent Services
      </h1>
      <div className="grid grid-cols-1 md:grid-cols-2 gap-8 w-11/12 md:w-2/3 lg:w-1/2">
        {/* Summer Rentals Card */}
        <div
          onClick={handleSummerClick}
          className="bg-blue-500 shadow-lg rounded-lg p-8 cursor-pointer hover:bg-blue-600 transition-colors text-white text-center"
        >
          <h2 className="text-2xl font-bold mb-4">Summer Rentals</h2>
          <p className="text-gray-200">Explore our summer rental options</p>
        </div>

        {/* Winter Rentals Card */}
        <div
          onClick={handleWinterClick}
          className="bg-green-500 shadow-lg rounded-lg p-8 cursor-pointer hover:bg-green-600 transition-colors text-white text-center"
        >
          <h2 className="text-2xl font-bold mb-4">Winter Rentals</h2>
          <p className="text-gray-200">Discover our winter rental options</p>
        </div>
      </div>
    </div>
  );
};

export default RentServicesHomepage;
